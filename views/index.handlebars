<h1>Are you hungry?</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h2> fresh burgers:</h2>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form class="devourburger" action="/{{this.id}}" method="POST">
                <button type="submit" class='notdevoured'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h2> DEVOURED</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='devoured'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>order up.</h2>

<div class="row">
    <form action="/"  method="POST">
      <input type="text" class="submitburger" name="burger_name" placeholder="burger name">
      <button type="submit" class="btn">ORDER</button>
    </form>
  </div>
